{
    "manifest_version": 2,

    "name": "Pandora Global Key Bindings",
    "description": "Control of Pandora with keyboard shortcuts that execute http requests",
    "version": "0.1",

    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [ 
        "tabs",
        "http://*.pandora.com/*"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    }
}
